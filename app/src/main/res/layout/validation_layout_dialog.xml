<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="@drawable/shape_white_5_bg"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginTop="@dimen/d40"
                android:text="@string/dialog_validation"
                android:textColor="@color/df_333333"
                android:textSize="@dimen/d34" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d30">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_email_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:scrollbarSize="@dimen/d30"
                        android:text="@string/dialog_email"
                        android:textColor="@color/df_font"
                        android:textSize="@dimen/d28" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_toEndOf="@+id/tv_email_t"
                        android:layout_toRightOf="@+id/tv_email_t"
                        android:scrollbarSize="@dimen/d30"
                        android:text="****@qq.com"
                        android:textColor="@color/df_font"
                        android:textSize="@dimen/d28" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d20">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_email_main"
                        android:layout_width="@dimen/d250"
                        android:layout_height="@dimen/d60"
                        android:layout_centerVertical="true"
                        android:background="@color/df_theme_bg_gray">

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/d10"
                            android:background="@null"
                            android:hint="@string/registered_hint_code"
                            android:inputType="number"
                            android:lines="20"
                            android:maxLength="6"
                            android:textColor="@color/df_font"
                            android:textColorHint="@color/df_font_gray"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/d24" />

                    </com.zhy.autolayout.AutoRelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_get_email"
                        android:layout_width="@dimen/d200"
                        android:layout_height="@dimen/d60"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_toEndOf="@+id/rl_email_main"
                        android:layout_toRightOf="@+id/rl_email_main"
                        android:background="@drawable/login_btu_cancel_orange_bg"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_email_get_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_get_code"
                            android:textColor="@color/white"
                            android:textSize="@dimen/d24" />

                    </com.zhy.autolayout.AutoRelativeLayout>


                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d30">>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_phone_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:scrollbarSize="@dimen/d30"
                        android:text="@string/dialog_phone"
                        android:textColor="@color/df_font"
                        android:textSize="@dimen/d28" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_toEndOf="@+id/tv_phone_t"
                        android:layout_toRightOf="@+id/tv_phone_t"
                        android:scrollbarSize="@dimen/d30"
                        android:text="*****"
                        android:textColor="@color/df_font"
                        android:textSize="@dimen/d28" />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d20">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_phone_main"
                        android:layout_width="@dimen/d250"
                        android:layout_height="@dimen/d60"
                        android:layout_centerVertical="true"
                        android:background="@color/df_theme_bg_gray">

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/d10"
                            android:background="@null"
                            android:hint="@string/registered_hint_code"
                            android:inputType="number"
                            android:lines="20"
                            android:maxLength="6"
                            android:textColor="@color/df_font"
                            android:textColorHint="@color/df_font_gray"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/d24" />

                    </com.zhy.autolayout.AutoRelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_get_phone"
                        android:layout_width="@dimen/d200"
                        android:layout_height="@dimen/d60"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_toEndOf="@+id/rl_phone_main"
                        android:layout_toRightOf="@+id/rl_phone_main"
                        android:background="@drawable/login_btu_cancel_orange_bg"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_phone_get_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_get_code"
                            android:textColor="@color/white"
                            android:textSize="@dimen/d24" />

                    </com.zhy.autolayout.AutoRelativeLayout>


                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d30">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_google_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:scrollbarSize="@dimen/d30"
                        android:text="@string/dialog_google"
                        android:textColor="@color/df_font"
                        android:textSize="@dimen/d28" />


                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d20">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rl_google_main"
                        android:layout_width="@dimen/d250"
                        android:layout_height="@dimen/d60"
                        android:layout_centerVertical="true"
                        android:background="@color/df_theme_bg_gray">

                        <EditText
                            android:id="@+id/et_google"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/d10"
                            android:background="@null"
                            android:hint="@string/registered_hint_code"
                            android:inputType="number"
                            android:lines="20"
                            android:maxLength="6"
                            android:textColor="@color/df_font"
                            android:textColorHint="@color/df_font_gray"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/d24" />

                    </com.zhy.autolayout.AutoRelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="@dimen/d200"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_toEndOf="@+id/rl_google_main"
                        android:layout_toRightOf="@+id/rl_google_main"
                        android:background="@drawable/border_focused_withd_white_butt"
                        android:gravity="center"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_get_code"
                            android:textColor="@color/df_theme"
                            android:textSize="@dimen/d30" />

                    </com.zhy.autolayout.AutoRelativeLayout>


                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/d30">

            <Button
                android:id="@+id/bt_commit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/d480"
                android:layout_height="@dimen/d80"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/d50"
                android:background="@drawable/login_btu_cancel_grey_bg"
                android:text="@string/dialog_commit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/d28" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>