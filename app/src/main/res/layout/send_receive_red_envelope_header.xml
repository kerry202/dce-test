<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".assets.SendReceiveRedEnvelopeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/d120"
                    android:layout_height="@dimen/d120"
                    android:layout_marginBottom="@dimen/d30"
                    android:layout_marginTop="@dimen/d80"
                    android:src="@drawable/send_receive_red_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red_send_sum_set"
                    android:textColor="@color/df_333333"
                    android:textSize="@dimen/d26" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d16"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sum_cmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="≈¥0.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/d50" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d30"
                android:layout_marginTop="@dimen/d18"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sum_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red_send_sum_hint"
                    android:textColor="@color/df_999999"
                    android:textSize="@dimen/d26" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d20"
            android:background="@color/df_F8F8F8" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_red_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d15"
                android:layout_marginLeft="@dimen/d30"
                android:layout_marginTop="@dimen/d15"
                android:text="@string/red_send_count"
                android:textColor="@color/df_gray_666"
                android:textSize="@dimen/d26" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/df_F8F8F8" />

        </com.zhy.autolayout.AutoLinearLayout>

    </LinearLayout>


</LinearLayout>