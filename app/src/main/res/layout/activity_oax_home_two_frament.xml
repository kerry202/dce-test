<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d170">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginRight="@dimen/d20"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/d20"
                android:paddingTop="@dimen/d20">

                <TextView
                    android:id="@+id/tv_home1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BNB/BTC"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d24" />

                <TextView
                    android:id="@+id/tv_home1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000017"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d32"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_home1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+3.57%"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d26" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/d100"
                android:background="@color/lightgrey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/d20"
                android:paddingTop="@dimen/d20">

                <TextView
                    android:id="@+id/tv_home2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BNB/BTC"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d24" />

                <TextView
                    android:id="@+id/tv_home2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000017"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d32"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_home2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+3.57%"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d26" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/d100"
                android:background="@color/lightgrey" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/d20"
                android:paddingTop="@dimen/d20">

                <TextView
                    android:id="@+id/tv_home3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BNB/BTC"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d24" />

                <TextView
                    android:id="@+id/tv_home3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000017"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d32"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_home3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+3.57%"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d26" />


            </LinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoRelativeLayout>
</RelativeLayout>