<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="@drawable/shape_white_5_bg"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/d70"
            android:layout_marginBottom="@dimen/d50"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/df_333333"
                android:textSize="@dimen/d46"
                android:text="@string/login_phone_thereare"
                />

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_content"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/df_999999"
                android:textSize="@dimen/d30"
                android:text="@string/login_phone_to_login"
                />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d30"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginRight="@dimen/d20"
            android:layout_marginTop="@dimen/d60">


            <RelativeLayout
                android:id="@+id/rl_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d80"
                android:layout_marginRight="@dimen/d20"
                android:layout_weight="1"
                android:background="@drawable/cancel_dialog_grey_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/cancel"
                    android:textColor="@color/df_333333"
                    android:textSize="@dimen/d30" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_go"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d80"
                android:layout_marginLeft="@dimen/d20"
                android:layout_weight="1"
                android:background="@drawable/cancel_dialog_orange_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/to_login"
                    android:textColor="@color/df_C46B00"
                    android:textSize="@dimen/d30" />

            </RelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>