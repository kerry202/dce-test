<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d120">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d120"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_market_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="---/---"
            android:textColor="@color/df_2A2A2A"
            android:textSize="@dimen/d24" />

        <TextView
            android:id="@+id/tv_left_coin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d200"
            android:layout_alignParentEnd="true"
            android:text="0.000"
            android:textColor="@color/df_2A2A2A"
            android:textSize="@dimen/d24"
            android:layout_alignParentRight="true" />


        <TextView
            android:id="@+id/tv_applies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0%"
            android:textColor="@color/df_2A2A2A"
            android:textSize="@dimen/d24" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/df_theme_bg_gray"
            />

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>