<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="@drawable/shape_white_5_bg"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/d30"
            android:paddingTop="@dimen/d30">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d30"
                android:layout_marginTop="@dimen/d30"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/d06"
                android:paddingLeft="@dimen/d30"
                android:paddingRight="@dimen/d30"
                android:paddingTop="@dimen/d06"
                android:textColor="@color/df_font"
                android:textSize="@dimen/d28" />


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/df_line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d100"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_cancel"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="@string/cancel"
                    android:textColor="@color/df_4A90E2"
                    android:textSize="@dimen/d28" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/df_line" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="@string/sure"
                    android:textColor="@color/df_font"
                    android:textSize="@dimen/d28" />

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>