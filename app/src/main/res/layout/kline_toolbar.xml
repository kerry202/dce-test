<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d90"
    android:layout_gravity="center_vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_left"
        android:layout_width="@dimen/d90"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">


        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/d70"
            android:layout_height="@dimen/d70"
            android:layout_centerVertical="true"
            android:padding="@dimen/d16"
            android:contentDescription="TODO"
            android:src="@drawable/icon_back_black" />


    </com.zhy.autolayout.AutoRelativeLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/home_grey"
        android:textSize="@dimen/d32"
        android:textStyle="bold" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginRight="@dimen/d30"
            android:background="@drawable/kline_collect_selector" />

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>